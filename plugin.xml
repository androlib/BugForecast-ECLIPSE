<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Java"
            id="BugForecast">
      </category>
      <view
            name="BugForecast"
            inject="true"
            icon="icons/sample.png"
            category="BugForecast"
            class="it.unisa.bugforecast.Application"
            id="org.eclipse.ui.forms.article.views.FormView">
      </view>
       <view
            name="Result"
            inject="true"
            icon="icons/sample.png"
            category="Result"
            class="it.unisa.bugforecast.Result"
            id="result">
      </view>
      <view
            name="ModelApplication"
            inject="true"
            icon="icons/sample.png"
            category="ModelApplication"
            class="it.unisa.bugforecast.ModelApplication"
            id="modelApplication">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="org.eclipse.ui.forms.article.views.FormView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
